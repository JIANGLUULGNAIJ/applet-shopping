/* pages/searchlist/searchlist.wxss */

.goodcontainer{
    /* 弹性布局 */
    display: flex;
    /* 换行 */
    flex-wrap: wrap;
}

.good{
    /* 每个<view>各占50% */
    width: 50%;
    padding: 20rpx;
    /* 怪异盒子模型，设置宽高不会加上padding和border的值了 */
    box-sizing: border-box;
    /* 居中 */
    text-align: center;
}

.good image{
    /*  父盒子已经是50%，所有图片可以直接占满，不用设置宽 */
    width: 100%;
}

.box{
    display: flex;
}

.box view{
    flex: 1;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
}